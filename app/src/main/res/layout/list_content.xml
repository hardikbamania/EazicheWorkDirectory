<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:weightSum="4">

            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pbar"
                    style="?attr/progressBarStyle"
                    android:layout_gravity="center"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civCompanyIcon"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:src="@android:color/darker_gray" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvCompanyName"
                    android:text="Name Of A Company"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:id="@+id/tvCompanyDesc"
                    android:text="there are many words here to describe A Company shop or seller"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:src="@drawable/star_full" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/tvCompanyRates"
                        android:text="4.5"
                        android:textSize="19sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sun_glass" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/tvCompanyVisit"
                        android:gravity="center"
                        android:text="4500"
                        android:textSize="18sp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/user" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/tvCompanySub"
                        android:gravity="center"
                        android:text="405"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:weightSum="8">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/location"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6.5"
                android:gravity="left|center"
                android:maxLength="28"
                android:id="@+id/tvCompanyAddress"
                android:layout_marginRight="5dp"
                android:text="Address will be printed here ..."
                android:textSize="18sp" />

            <ImageButton
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/user48"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:layout_width="10dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/chat"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
